<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <h2 class="title">Change your password</h2>
        
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
        
          <%= f.input :reset_password_token, as: :hidden, wrapper: false %>
          <%= f.full_error :reset_password_token %>
        
          <div class="field">
            <div class="control">
              <%= f.input :password,
                          label: "New password",
                          required: true,
                          autofocus: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { class: "input" }, 
                          wrapper: false,
                          label_html: {class: "label"} %>
            </div>
          </div>
            <div class="field">
              <div class="control">
                <%= f.input :password_confirmation, label: "Confirm your new password",
                            required: true,
                            input_html: { class: "input" }, 
                            wrapper: false,
                            label_html: {class: "label"} %>
              </div>
            </div>
        
          <div class="field">
            <div class="control">
              <%= f.button :submit, "Change my password", class: "button is-info is-medium" %>
            </div>
          </div>
        <% end %>
        <br/>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
