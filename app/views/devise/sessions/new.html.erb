
<div class="columns is-centered">
  <div class="column is-4">
    <section class="section">
      <h2 class="title">Log in</h2>
      
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <div class="control">
            <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "input is-success" },
                          wrapper: false,
                          label_html: {class: "label"} %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password",class: "input is-success" },
                        wrapper: false,
                        label_html: {class: "label"} %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.input :remember_me,
                        wrapper: false, 
                        label_html: {class: "checkbox"},
                        label_html: {class: "label"},
                          as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.button :submit, "Log in", class: "button is-info is-medium" %>
          </div>
        </div>
      <% end %>
    </section>
    <%= render "devise/shared/links" %>
  </div>
</div>

